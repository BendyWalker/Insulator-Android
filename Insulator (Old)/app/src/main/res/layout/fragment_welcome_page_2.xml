<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing_default_50_percent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_ready_to_use"
        style="@style/CardBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textview_ready_to_use_title"
                style="@style/CardTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/label_ready_to_use" />

            <TextView
                android:id="@+id/textView_ready_to_use_message"
                style="@style/CardInfoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textview_ready_to_use_title"
                android:text="@string/info_welcome_complete" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>