<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="mmol"
        android:dialogTitle="@string/preference_blood_glucose_units_title"
        android:entries="@array/preference_blood_glucose_units_entries"
        android:entryValues="@array/preference_blood_glucose_units_entryvalues"
        android:key="@string/key_blood_glucose_unit"
        android:summary="%s"
        android:title="@string/preference_blood_glucose_units_title"/>

    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/key_allow_floating_point_carbohydrates"
        android:summary="@string/preference_carbohydrate_decimal_place_summary"
        android:title="@string/preference_carbohydrate_decimal_place_title"/>

</PreferenceScreen>