<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/default_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/card_half_units"
            style="@style/CardBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/card_half_units_title"
                style="@style/CardTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_default_100_percent"
                android:text="@string/preference_half_units_title"/>

            <CheckBox
                android:id="@+id/card_half_units_checkbox"
                style="@style/CardInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_half_units_title"
                android:layout_centerVertical="true"
                android:text="@string/preference_half_units_summary"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card_blood_glucose_measurement"
            style="@style/CardBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/card_blood_glucose_measurement_title"
                style="@style/CardTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_default_100_percent"
                android:text="@string/preference_blood_glucose_units_title"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_blood_glucose_measurement_title">

                <RadioGroup
                    android:id="@+id/card_blood_glucose_measurement_radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/spacing_default_200_percent">

                    <RadioButton
                        android:id="@+id/card_blood_glucose_measurement_radio_button_mmol"
                        style="@style/CardInfoText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_mmol"/>

                    <RadioButton
                        android:id="@+id/card_blood_glucose_measurement_radio_button_mgdl"
                        style="@style/CardInfoText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_mgdl"/>
                </RadioGroup>

                <TextView
                    style="@style/CardInfoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/card_blood_glucose_measurement_radio_group"
                    android:text="@string/preference_blood_glucose_units_summary"
                    android:textColor="@color/card_text_secondary"/>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card_continue"
            style="@style/CardBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_continue"
                style="@style/CardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_continue"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
