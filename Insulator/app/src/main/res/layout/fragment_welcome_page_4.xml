<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:padding="@dimen/spacing_default_50_percent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_ready_to_use"
        style="@style/CardBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_title"
                style="@style/CardTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="@string/label_ready_to_use"/>

            <TextView
                android:id="@+id/textView_message"
                style="@style/CardInfoText.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView_title"
                android:layout_marginBottom="@dimen/spacing_default_100_percent"
                android:text="@string/info_welcome_complete"/>

            <Button
                android:id="@+id/button_use_insulator"
                style="@style/CardButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/textView_message"
                android:text="@string/button_use_insulator"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>