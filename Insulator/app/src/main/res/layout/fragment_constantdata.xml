<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_100"
        android:layout_marginRight="@dimen/spacing_100"
        android:divider="@drawable/divider_vertical_50"
        android:orientation="vertical"
        android:showDividers="beginning|middle|end">

        <com.bendywalker.insulator.Card
            android:id="@+id/card_constantdata_desiredBloodGlucoseLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:descriptionText="@string/card_description_desiredBloodGlucoseLevel"
            app:hintText="@string/card_hint_mmol"
            app:persistedValueKey="@string/key_desired_blood_glucose"
            app:titleText="@string/card_title_desiredBloodGlucoseLevel"/>

        <com.bendywalker.insulator.Card
            android:id="@+id/card_constantdata_carbohydrateFactor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:descriptionText="@string/card_description_carbohydrateFactor"
            app:hintText="@string/card_hint_mmol"
            app:persistedValueKey="@string/key_carbohydrate_factor"
            app:titleText="@string/card_title_carbohydrateFactor"/>

        <com.bendywalker.insulator.Card
            android:id="@+id/card_constantdata_correctiveFactor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:descriptionText="@string/card_description_correctiveFactor"
            app:hintText="@string/card_hint_mmol"
            app:persistedValueKey="@string/key_corrective_factor"
            app:titleText="@string/card_title_correctiveFactor"/>
    </LinearLayout>
</ScrollView>