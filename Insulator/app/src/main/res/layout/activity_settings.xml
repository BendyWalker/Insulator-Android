<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            style="@style/ToolbarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
            app:title="@string/title_settings"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_vertical_card"
            android:orientation="vertical"
            android:padding="@dimen/spacing_card"
            android:showDividers="middle">

            <android.support.v7.widget.CardView
                style="@style/CardBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_vertical_100"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <TextView
                        style="@style/CardTitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/card_title_preferences"/>

                    <com.bendywalker.insulator.BloodGlucoseUnitPreference
                        android:id="@+id/bloodGlucoseUnitPreference_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <com.bendywalker.insulator.CarbohydrateAccuracyPreference
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <com.bendywalker.insulator.CopySuggestionOnExitPreference
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/CardBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_vertical_100"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <TextView
                        style="@style/CardTitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/card_title_feedback"/>

                    <LinearLayout
                        android:id="@+id/view_settings_feedback_googlePlay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@drawable/divider_horizontal_50"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:showDividers="middle">

                        <TextView
                            style="@style/CardBodyTitleText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_feedback_play"/>

                        <TextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_feedback_play_contact"
                            android:textColor="@color/primary"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/view_settings_feedback_twitter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@drawable/divider_horizontal_50"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:showDividers="middle">

                        <TextView
                            style="@style/CardBodyTitleText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/settings_feedback_twitter"/>

                        <TextView
                            style="@style/TextAppearance.AppCompat.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_feedback_twitter_contact"
                            android:textColor="@color/primary"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_feedback_summary"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>