<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/section_tdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_tdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:text="@string/label_tdd"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/edittext_tdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:gravity="center"
            android:hint="@string/hint_units"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true"
            android:width="@dimen/entry_width" />
    </LinearLayout>

    <TextView
        android:id="@+id/info_tdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/info_tdd"
        android:textStyle="italic" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/line_horizontal_margin"
        android:layout_marginTop="@dimen/line_horizontal_margin"
        android:background="#000000" />

    <LinearLayout
        android:id="@+id/section_ratio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_ratio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:text="@string/label_ratio"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/edittext_ratio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:gravity="center"
            android:hint="@string/hint_units"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true"
            android:width="@dimen/entry_width" />
    </LinearLayout>

    <TextView
        android:id="@+id/info_ratio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/info_ratiox2c"
        android:textStyle="italic" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/line_horizontal_margin"
        android:layout_marginTop="@dimen/line_horizontal_margin"
        android:background="#000000" />

    <LinearLayout
        android:id="@+id/section_desired_persistent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_desired_persistent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:text="@string/label_desired"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/edittext_desired_persistent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:gravity="center"
            android:hint="@string/hint_mmol"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:width="@dimen/entry_width" />
    </LinearLayout>

    <TextView
        android:id="@+id/info_desired_persistent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/info_desired_mmol"
        android:textStyle="italic" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="@dimen/line_horizontal_margin"
        android:layout_marginTop="@dimen/line_horizontal_margin"
        android:background="#000000" />

    <Button
        android:id="@+id/button_save_persistent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_save_return"
        android:textStyle="bold" />

</LinearLayout>