<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background">

    <RelativeLayout
        android:id="@+id/card_welcome"
        style="@style/CardBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_welcome_title"
            style="@style/CardTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/heading_welcome"/>

        <TextView
            android:id="@+id/textView_welcome_message"
            style="@style/CardInfoText.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_welcome_title"
            android:layout_marginBottom="@dimen/spacing_default_100_percent"
            android:text="@string/info_welcome_1"/>


        <Button
            android:id="@+id/button_continue"
            style="@style/CardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_welcome_message"
            android:text="@string/button_continue"/>
    </RelativeLayout>
</LinearLayout>