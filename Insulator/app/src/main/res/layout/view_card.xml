<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@drawable/divider_horizontal_50"
    android:orientation="horizontal"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_card_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_placeholder"
            android:textColor="@color/card_text_dark"/>

        <TextView
            android:id="@+id/textView_card_description"
            style="@style/CardInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/description_placeholder"
            android:textColor="@color/card_text_dark"/>
    </LinearLayout>

    <EditText
        android:id="@+id/editText_card_entry"
        style="@style/CardEntryText"
        android:layout_width="@dimen/width_card_entry"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:hint="@string/card_hint_mmol"/>
</LinearLayout>