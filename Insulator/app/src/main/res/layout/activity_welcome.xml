<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/dashboard_toolbar"
        style="@style/ToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/title_welcome"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_card"
            android:layout_marginRight="@dimen/spacing_card"
            android:divider="@drawable/divider_vertical_card"
            android:orientation="vertical"
            android:showDividers="beginning|middle|end">

            <android.support.v7.widget.CardView
                style="@style/CardBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        style="@style/CardTitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/card_title_welcome"/>

                    <TextView
                        style="@style/CardInfoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/card_description_welcomeIntro"
                        android:textColor="@color/card_text_dark"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/CardBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/CardTitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/card_title_preferences"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@drawable/divider_vertical_100"
                        android:orientation="vertical"
                        android:showDividers="middle">

                        <include layout="@layout/view_preference_bloodglucoseunit"/>

                        <include layout="@layout/view_preferences_carbohydrateaccuracy"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/CardBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/CardTitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Constant values"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@drawable/divider_vertical_100"
                        android:orientation="vertical"
                        android:showDividers="middle">

                        <com.bendywalker.insulator.Card
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:descriptionText="@string/card_description_desiredBloodGlucoseLevel"
                            app:hintText="@string/card_hint_mmol"
                            app:titleText="@string/card_title_desiredBloodGlucoseLevel"/>

                        <com.bendywalker.insulator.Card
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:descriptionText="@string/card_description_carbohydrateFactor"
                            app:hintText="@string/card_hint_grams"
                            app:titleText="@string/card_title_carbohydrateFactor"/>

                        <com.bendywalker.insulator.Card
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:descriptionText="@string/card_description_correctiveFactor"
                            app:hintText="@string/card_hint_mmol"
                            app:titleText="@string/card_title_correctiveFactor"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>