<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layerlist_card"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_default_150_percent"
        android:paddingLeft="@dimen/spacing_default_200_percent"
        android:paddingRight="@dimen/spacing_default_200_percent"
        android:paddingTop="@dimen/spacing_default_150_percent">

        <TextView
            android:id="@+id/textview_welcome_title"
            style="@style/CardTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_default_100_percent"
            android:text="@string/heading_welcome" />

        <TextView
            android:id="@+id/textView_welcome_message"
            style="@style/CardInfoText"
            android:layout_width="match_parent" android:layout_marginBottom="@dimen/spacing_default_100_percent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_welcome_title"
            android:text="@string/info_welcome" />


        <Button
            android:id="@+id/button_continue"
            style="@style/CardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_welcome_message"
            android:text="@string/button_continue" />
    </RelativeLayout>
</LinearLayout>