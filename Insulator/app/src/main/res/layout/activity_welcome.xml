<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/title_welcome"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_card"
            android:divider="@drawable/divider_vertical_card"
            android:orientation="vertical"
            android:showDividers="middle">

            <android.support.v7.widget.CardView
                style="@style/CardBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@drawable/divider_vertical_100"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <TextView
                        style="@style/CardTitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/card_title_welcome"/>

                    <TextView
                        style="@style/CardBodyDescriptionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cardBody_description_welcome"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/CardBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_vertical_100"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <TextView
                        style="@style/CardTitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/card_title_preferences"/>

                    <com.bendywalker.insulator.BloodGlucoseUnitPreference
                        android:id="@+id/bloodGlucoseUnitPreference"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <com.bendywalker.insulator.CarbohydrateAccuracyPreference
                        android:id="@+id/carbohydrateAccuracyPreference"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <com.bendywalker.insulator.CopySuggestionOnExitPreference
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/CardBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_vertical_100"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <TextView
                        style="@style/CardTitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Constant values"/>

                    <com.bendywalker.insulator.CardBody
                        android:id="@+id/desiredBloodGlucoseLevelCardBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:descriptionText="@string/cardBody_description_desiredBloodGlucoseLevel"
                        app:hintText="@string/card_hint_mmol"
                        app:titleText="@string/cardBody_title_desiredBloodGlucoseLevel"/>

                    <com.bendywalker.insulator.CardBody
                        android:id="@+id/carbohydrateFactorCardBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:descriptionText="@string/cardBody_description_carbohydrateFactor"
                        app:hintText="@string/card_hint_grams"
                        app:titleText="@string/cardBody_title_carbohydrateFactor"/>

                    <com.bendywalker.insulator.CardBody
                        android:id="@+id/correctiveFactorCardBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:descriptionText="@string/cardBody_description_correctiveFactor"
                        app:hintText="@string/card_hint_mmol"
                        app:titleText="@string/cardBody_title_correctiveFactor"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/readyToUseCardView"
                style="@style/CardBase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_vertical_100"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <TextView
                        style="@style/CardTitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/card_title_readyToUse"/>

                    <TextView
                        style="@style/CardBodyDescriptionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cardBody_description_readyToUse"/>

                    <Button
                        android:id="@+id/useInsulatorButton"
                        style="@style/CardButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="@string/button_useInsulator"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>