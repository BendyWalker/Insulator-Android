<android.support.v7.widget.CardView
    style="@style/CardBase"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/card_title"
            style="@style/CardTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Placeholder Label"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_title">

            <EditText
                android:id="@+id/card_entry"
                style="@style/CardEntryText"
                android:layout_width="@dimen/card_entry_width"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:hint="@string/hint_mmol"/>

            <TextView
                android:id="@+id/card_info"
                style="@style/CardInfoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/card_entry"
                android:text="This is placeholder description text. It can span multiple lines depending on how long it is."/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>