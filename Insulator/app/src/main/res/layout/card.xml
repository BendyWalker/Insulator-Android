<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/card"
    android:paddingBottom="@dimen/spacing_default_150_percent"
    android:paddingLeft="@dimen/spacing_default_200_percent"
    android:paddingRight="@dimen/spacing_default_200_percent"
    android:paddingTop="@dimen/spacing_default_150_percent">

    <TextView
        android:id="@+id/card_title"
        style="@style/CardTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_default_100_percent"
        android:paddingBottom="@dimen/spacing_default_25_percent"
        android:text="Placeholder Label" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_title">

        <EditText
            android:id="@+id/card_entry"
            style="@style/CardEntryText"
            android:layout_width="@dimen/entry_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/spacing_default_100_percent"
            android:gravity="center"
            android:hint="@string/hint_mmol"
            android:inputType="number" />

        <TextView
            android:id="@+id/card_info"
            style="@style/CardInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/card_entry"
            android:text="This is placeholder description text. It can span multiple lines depending on how long it is." />
    </RelativeLayout>
</RelativeLayout>