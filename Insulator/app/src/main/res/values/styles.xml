<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/md_grey_100</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="android:elevation">@dimen/elevation_toolbar</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="actionMenuTextColor">@color/md_white_1000</item>
        <item name="android:colorControlNormal">@color/md_white_1000</item>
    </style>

    <!-- Card elements -->
    <style name="CardBase">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="contentPadding">@dimen/spacing_100</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="CardTitleText" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="CardBodyTitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/card_text_dark</item>
    </style>

    <style name="CardBodyDescriptionText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/card_text_dark</item>

    </style>

    <style name="CardBodyEntryText" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textSize">@dimen/text_card_entry_empty</item>
        <item name="android:textColor">@drawable/selector_cardbody_entry</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColorHint">@color/card_text_light</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CardButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@drawable/selector_card_button</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
