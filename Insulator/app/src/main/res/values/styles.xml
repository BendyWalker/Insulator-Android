<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Card Elements -->
    <style name="CardTitleText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_card_title</item>
        <item name="android:textColor">@color/card_text_primary</item>
    </style>

    <style name="CardInfoText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_card_info</item>
        <item name="android:textColor">@color/card_text_primary</item>
    </style>

    <style name="CardEntryText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_card_entry</item>
        <item name="android:textColor">@color/card_text_primary</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CardButton">
        <item name="android:textColor">@drawable/selector_button</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_card_button</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>
