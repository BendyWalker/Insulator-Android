<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Card elements -->
    <style name="CardBase">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="contentPadding">@dimen/spacing_100</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="CardTitleText" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_marginBottom">@dimen/spacing_50</item>
    </style>


    <style name="CardInfoText" parent="Base.TextAppearance.AppCompat.Body1">
        <!--<item name="android:textColor">@color/card_text_light</item>-->

    </style>

    <style name="CardEntryText">
        <item name="android:textSize">@dimen/text_card_entry_empty</item>
        <!--<item name="android:textColor">@drawable/selector_card_entry</item>-->
        <item name="android:inputType">number</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:ellipsize">end</item>
        <!--<item name="android:textColorHint">@color/card_text_light</item>-->
        <item name="android:maxLength">5</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/spacing_100</item>
    </style>

    <style name="CardButton" parent="Base.TextAppearance.AppCompat.Button">
        <!--<item name="android:textColor">@drawable/selector_button</item>-->
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
